{% extends 'base.html.twig' %}

{% block title %}Invitation à la réunion{% endblock %}

{% block body %}
<h1>Invitation à la réunion : {{ reunion.titre }}</h1>

<p>Description : {{ reunion.description }}</p>
<p>Lieu : {{ reunion.lieu }}</p>
<p>Date de création : {{ reunion.dateCreation|date('d/m/Y H:i') }}</p>

<p>Votre invitation : {{ invitation.inviteEmail }}</p>

<h2>Répondez à cette invitation</h2>

{{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn btn-primary">Envoyer la réponse</button>
{{ form_end(form) }}

{% endblock %}
