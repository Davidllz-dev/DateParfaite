{% block body %}
    {% if app.user %}
        <h1>Bienvenue {{ app.user.email }}</h1>
    {% else %}
        <h1>Bienvenue invité</h1>
        <p><a href="{{ path('app_login') }}">Se connecter</a></p>
    {% endif %}

    <a href="{{ path('reunion_new') }}">➕ Nouvelle planification</a>

    <hr>

    <h2>Mes Réunions</h2>
    <ul>
        {% for reunion in reunions %}
            <li>
                <strong>{{ reunion.titre }}</strong> ({{ reunion.status.value }})
                <br>{{ reunion.description }} - {{ reunion.lieu }}
                <br>Créée le {{ reunion.dateCreation|date('d/m/Y H:i') }}
            </li>
        {% else %}
            <li>Aucune réunion planifiée.</li>
        {% endfor %}
    </ul>
{% endblock %}
